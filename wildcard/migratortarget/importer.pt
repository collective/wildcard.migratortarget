<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-title">
    <metal:content-core define-macro="content-title">
        <h1>Importer</h1>
    </metal:content-core>
</metal:content-core>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        <form method="POST">
            <input type="text" name="source" tal:attributes="value request/source|nothing" />
            <fieldset>
                <legend>Site Importers</legend>
                <tal:importers tal:repeat="importer view/site_migrators">
                    <input type="submit" name="migrator" tal:attributes="value importer/title" />
                    <br />
                </tal:importers>
            </fieldset>
        </form>
    </metal:content-core>
</metal:content-core>

</body>
</html>

